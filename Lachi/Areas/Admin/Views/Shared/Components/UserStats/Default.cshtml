@using Lachi.Areas.Admin.Models.ViewComponents
@model UserStatsDto

<div class="col-lg-3 col-sm-6 mb-lg-0 mb-4">
    <div class="card">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-8">
                    <div class="numbers">
                        <p class="text-sm mb-0 text-capitalize font-weight-bold">کاربران امروز</p>
                        <h5 class="font-weight-bolder mb-0">
                            @Model.TodayUsers.ToString("N0")
                            <span class="@(Model.GrowthPercent > 0 ? "text-success": "text-danger") text-sm font-weight-bolder">@Model.GrowthPercent.ToString("N2")%</span>
                        </h5>
                    </div>
                </div>
                <div class="col-4 text-start">
                    <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                        <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
