@using Lachi.Areas.Admin.Models.User
@model UserEditDto
@{
    ViewData["Title"] = "ویرایش کاربر";
}

<div class="card mt-4">
    <div class="card-header bg-gradient-primary text-white">
        <h5 class="mb-0 text-white">ویرایش کاربر</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="row g-3">
                <div asp-validation-summary="All" class="text-danger mb-3 col-12"></div>
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">ثبت ویرایش</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">بازگشت</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}