@model Lachi.Models.LoginDto
@{
    Layout = null;
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>StreamHub - ورود</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #0e0e10;
            color: #fff;
        }

        .auth-card {
            background-color: #18181b;
            border-radius: 8px;
            padding: 2rem;
            max-width: 420px;
            margin: 7% auto;
        }

        .form-control {
            background-color: #0e0e10;
            color: #fff;
            border: 1px solid #333;
        }

            .form-control:focus {
                background-color: #0e0e10;
                color: #fff;
                border-color: #9146ff;
                box-shadow: none;
            }

        .btn-primary {
            background-color: #9146ff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #772ce8;
            }

        a {
            color: #9146ff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Login Form -->
    <div class="auth-card text-center">
        <h3 class="mb-4">ورود به حساب</h3>

        <form asp-action="Login" method="post" class="text-start">
            <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">ایمیل یا نام کاربری</label>
                <input asp-for="UserName" class="form-control" placeholder="example@mail.com" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">رمز عبور</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label small"></label>
                </div>
                <a href="#" class="small">فراموشی رمز عبور؟</a>
            </div>

            <div class="text-danger mb-3" asp-validation-summary="All"></div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">ورود</button>
            </div>
        </form>

        <hr class="border-secondary">
        <p class="mb-1">حساب ندارید؟</p>
        <a href="/Auth/Register">ایجاد حساب جدید</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
