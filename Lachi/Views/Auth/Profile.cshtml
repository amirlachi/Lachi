@using Lachi.Areas.Admin.Models.User
@model ProfileDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>StreamHub - User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #0e0e10;
            color: #fff;
        }

        .navbar {
            background-color: #18181b;
        }

        .content-card {
            background-color: #18181b;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 0 12px rgba(0,0,0,0.5);
        }

        .footer {
            background-color: #18181b;
            font-size: 0.8rem;
            color: #aaa;
        }

        .form-control, .form-select {
            background-color: #0e0e10;
            color: #fff;
            border: 1px solid #333;
        }

        .btn {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-dark px-3">
        <a class="navbar-brand text-white fw-bold" href="#">Stream<span class="text-primary">Hub</span></a>
        <form class="d-flex mx-auto" style="max-width:400px;">
            <input class="form-control bg-dark text-white" type="search" placeholder="جستجو">
            <button class="btn btn-dark" type="submit">🔍</button>
        </form>
        <div class="d-flex gap-3">
            <span>👤</span>
        </div>
    </nav>

    <div class="container my-5">
        <!-- Profile Edit -->
        <section id="profile">
            <div class="content-card">
                <h4 class="mb-4">ویرایش پروفایل</h4>
                <form asp-controller="Auth" asp-action="Profile" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">نام</label>
                            <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">نام خانوادگی</label>
                            <input type="text" class="form-control" name="LastName" value="@Model.LastName" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">نام کاربری</label>
                            <input type="text" class="form-control" name="UserName" value="@Model.UserName" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">ایمیل</label>
                            <input type="email" class="form-control" name="Email" value="@Model.Email" />
                        </div>
                        <div class="col-12 d-flex justify-content-end gap-2 mt-4">
                            <a href="/" class="btn btn-outline-secondary">بازگشت</a>
                            <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>

    <!-- Footer -->
    <footer class="footer py-3 px-4 mt-4">
        <div class="d-flex justify-content-between">
            <span>© 2025 StreamHub - Demo UI</span>
            <span>👥 1,234,567 online · 🎥 78,901 live</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>