@using Lachi.Models.Channel
@model UserChannelDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>StreamHub - مدیریت کانال</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #0e0e10;
            color: #fff;
        }

        .navbar {
            background-color: #18181b;
        }

        .content-card {
            background-color: #18181b;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .form-control, .form-select {
            background-color: #0e0e10;
            color: #fff;
            border: 1px solid #333;
        }

        .video-card img {
            width: 100%;
            height: 140px;
            object-fit: cover;
            border-radius: 6px;
        }

        .playlist-card {
            background-color: #2a2a2d;
            border-radius: 6px;
            padding: 1rem;
            text-align: center;
        }

        .post-card {
            background-color: #2a2a2d;
            border-radius: 6px;
            padding: 1rem;
        }

        .footer {
            background-color: #18181b;
            font-size: 0.8rem;
            color: #aaa;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark px-3">
        <a class="navbar-brand text-white fw-bold" href="#">Stream<span class="text-primary">Hub</span></a>
    </nav>

    <div class="container py-4">

        <!-- Channel Info Management -->
        <div class="content-card">
            <h4 class="mb-3">مدیریت اطلاعات کانال</h4>
            <form asp-action="Edit" asp-controller="Channel" method="post" enctype="multipart/form-data" class="row g-3">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6">
                    <label class="form-label">نام کانال</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">نام کاربری</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="col-12">
                    <label class="form-label">توضیحات کانال</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">آپلود عکس پروفایل</label>
                    <input type="file" name="ProfileImage" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">آپلود بنر کانال</label>
                    <input type="file" name="BannerImage" class="form-control" />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                </div>
            </form>
        </div>

        <!-- Videos Management -->
        <div class="content-card">
            <h4 class="mb-3">مدیریت ویدیوها</h4>
            <div class="row g-3 mb-3">
                @foreach (var video in Model.Videos)
                {
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="video-card bg-dark p-2">
                            <img src="@video.ThumbnailPath" alt="@video.Title" />
                            <p class="mt-2 mb-0">@video.Title</p>
                            <div class="d-flex justify-content-between small">
                                <a asp-action="EditVideo" asp-route-id="@video.UserChannelId" class="text-info">ویرایش</a>
                                <form asp-action="DeleteVideo" asp-route-videoId="@video.UserChannelId" method="post" class="d-inline">
                                    <button class="btn btn-link text-danger p-0">حذف</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a asp-action="UploadVideo" asp-route-channelId="@Model.Id" class="btn btn-success">➕ آپلود ویدیوی جدید</a>
        </div>

        <!-- Playlists Management -->
        <div class="content-card">
            <h4 class="mb-3">مدیریت پلی‌لیست‌ها</h4>
            <div class="row g-3 mb-3">
                @foreach (var playlist in Model.Playlists)
                {
                    <div class="col-6 col-md-4 col-lg-2">
                        <div class="playlist-card">
                            @playlist.Title<br />
                            <small class="text-white-50">@playlist.VideoCount videos</small>
                            <div class="mt-2 d-flex justify-content-between small">
                                <a asp-action="EditPlaylist" asp-route-id="@playlist.Id" class="text-info">ویرایش</a>
                                <form asp-action="DeletePlaylist" asp-route-playlistId="@playlist.Id" method="post" class="d-inline">
                                    <button class="btn btn-link text-danger p-0">حذف</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a asp-action="CreatePlaylist" asp-route-channelId="@Model.Id" class="btn btn-success">➕ ساخت پلی‌لیست جدید</a>
        </div>

    </div>

    <footer class="footer py-3 px-4 mt-4">
        <div class="d-flex justify-content-between">
            <span>© 2025 StreamHub - Demo UI</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
