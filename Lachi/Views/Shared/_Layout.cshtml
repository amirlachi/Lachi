<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Lachi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <style>
        body { background-color: #0e0e10; color: #fff; }
        .navbar { background-color: #18181b; }
        .sidebar { background-color: #1f1f23; min-height: 100vh; }
        .sidebar .nav-link { color: #ccc; font-size: 0.9rem; }
        .sidebar .nav-link.active, .sidebar .nav-link:hover { color: #fff; }
        .live-badge { position: absolute; top: 8px; left: 8px; background: red; color: #fff; font-size: 0.75rem; padding: 2px 6px; border-radius: 4px; }
        .viewer-count { position: absolute; bottom: 8px; left: 8px; background: rgba(0,0,0,0.7); color: #fff; font-size: 0.75rem; padding: 2px 6px; border-radius: 4px; }
        .stream-card { background-color: #18181b; border-radius: 8px; overflow: hidden; }
        .stream-card img { width: 100%; height: 160px; object-fit: cover; }
        .category-card img { width: 100%; height: 140px; object-fit: cover; border-radius: 6px; }
        .footer { background-color: #18181b; font-size: 0.8rem; color: #aaa; }
        .tabs .nav-link { color: #aaa; }
        .tabs .nav-link.active { color: #fff; border-bottom: 2px solid #9146ff; }
    </style>
</head>
<body>
    <!-- Navbar -->
    <!-- Navbar -->
    <nav class="navbar navbar-dark px-3">
        <a class="navbar-brand text-white fw-bold" href="/">Stream<span class="text-primary">Hub</span></a>

        <form class="d-flex mx-auto" style="max-width:400px;">
            <input class="form-control bg-dark text-white" type="search" placeholder="Search">
            <button class="btn btn-dark" type="submit">🔍</button>
        </form>

        <div class="d-flex gap-3">
            <div class="dropdown">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a href="#" class="text-white text-decoration-none" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        👤 @User.Identity.Name
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">مشاهده پروفایل</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Channel" asp-action="Manage">مدیریت کانال</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Auth" asp-action="LogOut" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">خروج</button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <a href="#" class="text-white text-decoration-none" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        👤
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Login">ورود</a></li>
                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Register">ثبت‌نام</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-12 col-md-3 col-lg-2 sidebar p-3">
                <h6 class="text-white-50">Followed Channels</h6>
                <ul class="nav flex-column mb-4" id="followed-list">

                </ul>
                <h6 class="text-white-50">Categories</h6>
                <ul class="nav flex-column">
                    <li><a class="nav-link" href="#">Just Chatting <span class="text-white-50 float-end">342,000</span></a></li>
                    <li><a class="nav-link" href="#">Valorant <span class="text-white-50 float-end">221,000</span></a></li>
                    <li><a class="nav-link" href="#">Minecraft <span class="text-white-50 float-end">198,000</span></a></li>
                </ul>
            </aside>

            <!-- Main -->
            <main class="col p-4">
                <!-- Tabs -->
                <ul class="nav tabs mb-4">
                    <li class="nav-item"><a class="nav-link active" href="#">For You</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Following</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Browse</a></li>
                </ul>

                
                @RenderBody()

                <!-- Categories -->
                <h5 class="mb-3">Browse categories</h5>
                <div class="row g-3 mb-5">
                    <div class="col-6 col-md-4 col-lg-2">
                        <div class="category-card">
                            <img src="https://picsum.photos/200/140?3" alt="cat">
                            <small class="text-white-50">342,000 viewers</small>
                        </div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-2">
                        <div class="category-card">
                            <img src="https://picsum.photos/200/140?4" alt="cat">
                            <small class="text-white-50">221,000 viewers</small>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer py-3 px-4 mt-4">
        <div class="d-flex justify-content-between">
            <span>© 2025 StreamHub - Demo UI</span>
            <span>👥 1,234,567 online · 🎥 78,901 live</span>
        </div>
    </footer>

    <script>
        async function loadFollowedChannels() {
            const userId = '@User.FindFirst("sub")?.Value';

            const res = await fetch(`/Admin/User/FollowedChannels?userId=${userId}`);
            const channels = await res.json();
            const list = document.getElementById("followed-list");
            list.innerHTML = "";

            channels.forEach(ch => {
                const li = document.createElement("li");
                li.innerHTML = `
                    <a class="nav-link" href="#">
                        🔴 ${ch.UserName || (ch.FirstName + " " + ch.LastName)}
                        <span class="badge bg-danger float-end">0</span>
                    </a>`;
                list.appendChild(li);
            });
        }

        loadFollowedChannels();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
